#!/bin/bash


echo "###################################################################################"
echo  "###################  VOLUMES   ###################################################"
echo "###################################################################################"
docker volume prune -f


echo "###################################################################################"
echo  "###################  NETWORKS  ###################################################"
echo "###################################################################################"


docker network prune -f
echo "###################################################################################"
echo  "###################  CONTAINERS   ################################################"
echo "###################################################################################"
docker rm $(docker ps -a -f status=exited -q)
docker rmi $(docker images --filter "dangling=true" -q --no-trunc)
